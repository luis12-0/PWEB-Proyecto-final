@page
@model Prueba6.Pages.VistaMiCarrito.DeleteModel

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar producto</h1>
<hr />
<h3>¿Estas seguro de que quieres eliminar @Html.DisplayFor(model => model.MiCarrito.ArticuloMiCarrito) de tu carrito?</h3>

<div class="container h-50">
    <div class="row ">
        <div class="col-8">
            <img src="@Model.MiCarrito.ImagenMiCarrito" style="width: 100%; height: 100%; object-fit: cover;">
        </div>
        <div class="col-4">
            <h1>@Model.MiCarrito.ArticuloMiCarrito</h1>
            <h2>$@Model.MiCarrito.PrecioMiCarrito</h2>
            <p>@Model.MiCarrito.DescripcionMiCarrito</p>

            <div class="row">
                <div class="col mt-2">
                    <a asp-page="./Index" class="btn btn-outline-success float-lg-left btn-lg" role="button"
                       style="width:100%">Regresar</a>
                </div>
                <div class="col mt-2">
                    <form method="post">
                        <input type="hidden" asp-for="MiCarrito.IdmiCarrito" />
                        <input class="btn btn-outline-danger float-lg-right btn-lg" style="width:100%" type="submit" value="Eliminar" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

